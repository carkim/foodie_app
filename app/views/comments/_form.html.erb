<h3>Post a Comment</h3>

  <%= form_for [ @restaurant, @comment ] do |f| %>
  <p>
    <%= f.label :user, "Username" %><br/>
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :body, "Your Comment" %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
